[push]
	default = current

[pull]
	default = current

[color]
	ui = true

[color "status"]
	added = green
	changed = yellow
	untracked = red

[color "branch"]
	current = white
	remote = red

[color "diff"]
	meta = yellow
	old = red
	new = green

[alias]
	# https://www.youtube.com/watch?v=VpeU3VpszAc
	cm = commit -m
	ca = commit --amend
	co = checkout
	st = status -sb
	sf = show --name-only
	lg = log --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30
	lo = log --oneline
	lt = log --pretty=format:'%Cred[%h]%Creset%C(bold blue)[%an]%Creset%Cgreen[%cr]%Creset - %C(yellow)%d%Creset %s ' --abbrev-commit --graph --date=short
	incoming = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' ..@{u})
	outgoing = !(git fetch --quiet && git log --pretty=format:'%C(yellow)%h %C(white)- %C(red)%an %C(white)- %C(cyan)%d%Creset %s %C(white)- %ar%Creset' @{u}..)
	unstage = reset HEAD --
	undo = checkout --
	rollback = reset --soft HEAD~1
	conflicts = !git ls-files -u | cut -f 2 | sort -u

	# https://haacked.com/archive/2014/07/28/github-flow-aliases/
	save = !git add -A && git commit -m 'SAVEPOINT'
	amend = commit -a --amend
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	# up = !git pull --rebase --prune $@ && git submodule update --init --recursive

	# https://gist.github.com/kelvinst/331aff32508e2517afbd
	prev = checkout HEAD^1
	next = "!sh -c 'git log --reverse --pretty=%H master | awk \"/$(git rev-parse HEAD)/{getline;print}\" | xargs git checkout'"
	
	base = save && git co master && git pull
[core]
	autocrlf = true
